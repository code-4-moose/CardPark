@page "/"

@using Microsoft.AspNetCore.Identity;

@inject NavigationManager NavigationManager
@inject SignInManager<ProjectCardPark1User> SignInManager 

<PageTitle>Home</PageTitle>

<div class="banner">
    <div class="slider" style="--quantity: 6">
        <div class="item" style="--position: 1"><img src="ImageSpinner/hololive_1.png" alt=""></div>
        <div class="item" style="--position: 2"><img src="ImageSpinner/pokemon_1.png" alt=""></div>
        <div class="item" style="--position: 3"><img src="ImageSpinner/vanguard_1.png" alt=""></div>
        <div class="item" style="--position: 4"><img src="ImageSpinner/hololive_2.png" alt=""></div>
        <div class="item" style="--position: 5"><img src="ImageSpinner/pokemon_2.png" alt=""></div>
        <div class="item" style="--position: 6"><img src="ImageSpinner/vanguard_2.png" alt=""></div>

    </div>

    <div class="content">
        <h1>
            CARD PARK
        </h1>
    </div>

</div>

@code{

    [SupplyParameterFromQuery(Name = "logout")]
    public Boolean Logout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Logout == true)
        {
            await SignInManager.SignOutAsync();
            NavigationManager.NavigateTo("/", forceLoad: true);
        }
    }
}